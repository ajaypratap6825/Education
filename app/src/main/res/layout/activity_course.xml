<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity"
    android:scrollbarAlwaysDrawHorizontalTrack="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:id="@+id/video" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alice"
        android:paddingLeft="15dp"
        android:text="Beginner Module"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="260dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="11dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play1"
        android:text="Java - Session 1 - Introduction to java"
        android:layout_below="@id/heading"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"/>

    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="11dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play2"
        android:text="Java - Session 2 - Installing Eclipse IDE"
        android:layout_below="@id/heading"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="30dp"/>

    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="11dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play3"
        android:text="Java - Session 3 - Creating First Project"
        android:layout_below="@id/heading"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="30dp"/>

    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="11dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play4"
        android:text="Java - Session 4 - Variables and Types"
        android:layout_below="@id/heading"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="30dp"/>

    <View
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:background="#737377"
        android:layout_below="@id/heading"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="11dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play5"
        android:text="Java - Session 5 - User Input"
        android:layout_below="@id/heading"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="30dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>